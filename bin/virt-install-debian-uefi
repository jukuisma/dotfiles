#!/usr/bin/env bash

CPUS="${CPUS:=4}"
DISK="${DISK:=20}"
RAM="${RAM:=8192}"

domain="$1"

virt-install \
    --name "$domain" \
    --ram "$RAM" --vcpus "$CPUS" \
    --disk size="$DISK" \
    --os-variant debian13 \
    --graphics none \
    --boot uefi,nvram_template=/usr/share/edk2/ovmf/OVMF_VARS.fd \
    --initrd-inject="$HOME/.local/share/debian/preseed.cfg" \
    --console pty,target_type=serial \
    --location 'https://ftp.debian.org/debian/dists/trixie/main/installer-amd64/' \
    --extra-args 'console=ttyS0,115200n8 serial'
