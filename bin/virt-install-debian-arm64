#!/usr/bin/bash

CPUS="${CPUS:=4}"
DISK="${DISK:=20}"
RAM="${RAM:=8192}"

domain="$1"

virt-install \
    --name "$domain" \
    --arch aarch64 \
    --ram "$RAM" --vcpus "$CPUS" \
    --disk size="$DISK" \
    --os-variant debian12 \
    --graphics none \
    --console pty,target_type=serial \
    --location 'https://ftp.debian.org/debian/dists/bookworm/main/installer-arm64/' \
    --extra-args 'console=ttyS0,115200n8 serial'
